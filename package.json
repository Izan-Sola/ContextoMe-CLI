{
  "name": "contexto-cli",
  "version": "1.0.0",
  "description": "Contexto game CLI for Windows and Unix systems",
  "main": "index.js",
  "bin": {
    "contexto": "./bin/contexto"
  },
  "scripts": {
    "start": "node contexto-cli.js",
    "build": "pkg . --compress GZip",
    "build:win": "pkg . --targets node18-win-x64 --compress GZip",
    "build:linux": "pkg . --targets node18-linux-x64 --compress GZip",
    "build:mac": "pkg . --targets node18-macos-x64 --compress GZip",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --compress GZip"
  },
  "pkg": {
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist",
    "scripts": [
      "contextoAPI.js",
      "getGameId.js"
    ]
  },
  "dependencies": {
    "keypress": "^0.2.1",
    "puppeteer-core": "^24.37.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "keywords": [
    "contexto",
    "game",
    "cli",
    "word-game"
  ],
  "author": "",
  "license": "MIT"
}
